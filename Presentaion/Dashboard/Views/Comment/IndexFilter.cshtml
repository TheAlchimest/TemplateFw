@inject IOptions<WebSettings> webSettings
@model TemplateFw.Dtos.CommentFilter
<div class="card master-form">
    <div class="card-body">
        <form id="grid-filter" class="grid-filter"
              action="/comment/IndexContent"
              data-container-id="containerBox"
              onsubmit="actionsController.search(this,event)">
            <input type="hidden" id="PageNumber" name="PageNumber" value="@Model.PageNumber" />
            <div class="row">
                <div class="col-md-4 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="ArticleId">@modulesLocalizer["Article"] :</label>
    <select class="form-control form-select select2 select2-control select-dynamic"   id="ArticleId" name="ArticleId" data-api-url="article/lookup" data-default-val="" data-default-text="@localizer["All"]" value="@(Model?.ArticleId)"  data-smk-max="9999999999" data-smk-min="-9999999999">
    </select>
    
</div>
</div>
<div class="col-md-4 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="UserId">@modulesLocalizer["Users"] :</label>
    <select class="form-control form-select select2 select2-control select-dynamic"   id="UserId" name="UserId" data-api-url="users/lookup" data-default-val="" data-default-text="@localizer["All"]" value="@(Model?.UserId)"  data-smk-max="9999999999" data-smk-min="-9999999999">
    </select>
    
</div>
</div>
<div class="col-md-4 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="PageSize">@modulesLocalizer[""] :</label>
    <select class="form-control form-select select2 select2-control static-select"   id="PageSize" name="PageSize" value="@(Model?.PageSize)">
        <option value="20">20</option>
        <option value="50">50</option>
        <option value="100">100</option>
    </select>
    
</div>
</div>
<div class="col-md-12 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="Content">@modulesLocalizer["Comment_Content"] :</label>
    <textarea rows="4"
              class="form-control"
               id="Content" name="Content" placeholder="" maxlength="500" value="@(Model?.Content)">@(Model?.Content)</textarea>
              
    <i class="accent"></i>
</div>
</div>

            </div>
        </form>
    </div>
</div>
<script>
    $('#grid-filter').find('select,input').change(function () {
        $('#PageNumber').val('1');
        $('#grid-filter').trigger('submit');

    });
</script>   