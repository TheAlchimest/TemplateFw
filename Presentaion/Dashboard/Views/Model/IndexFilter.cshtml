@inject IOptions<WebSettings> webSettings
@model TemplateFw.Dtos.ModelFilter
<div class="card master-form">
    <div class="card-body">
        <form id="grid-filter" class="grid-filter"
              action="/model/IndexContent"
              data-container-id="containerBox"
              onsubmit="actionsController.search(this,event)">
            <input type="hidden" id="PageNumber" name="PageNumber" value="@Model.PageNumber" />
            <div class="row">
                <div class="col-md-4 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="CountryId">@modulesLocalizer["Country"] :</label>
    <select class="form-control form-select select2 select2-control select-dynamic"   id="CountryId" name="CountryId" data-api-url="country/lookup" data-default-val="" data-default-text="@localizer["All"]" value="@(Model?.CountryId)"  data-smk-max="9999999999" data-smk-min="-9999999999">
    </select>
    
</div>
</div>
<div class="col-md-4 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="CategoryId">@modulesLocalizer["Category"] :</label>
    <select class="form-control form-select select2 select2-control select-dynamic"   id="CategoryId" name="CategoryId" data-api-url="category/lookup" data-default-val="" data-default-text="@localizer["All"]" value="@(Model?.CategoryId)"  data-smk-max="9999999999" data-smk-min="-9999999999">
    </select>
    
</div>
</div>
<div class="col-md-4 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="PortalId">@modulesLocalizer["Portal"] :</label>
    <select class="form-control form-select select2 select2-control select-dynamic"   id="PortalId" name="PortalId" data-api-url="portal/lookup" data-default-val="" data-default-text="@localizer["All"]" value="@(Model?.PortalId)"  data-smk-max="9999999999" data-smk-min="-9999999999">
    </select>
    
</div>
</div>
<div class="col-md-4 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="ServiceId">@modulesLocalizer["Service"] :</label>
    <select class="form-control form-select select2 select2-control select-dynamic"   id="ServiceId" name="ServiceId" data-api-url="service/lookup" data-default-val="" data-default-text="@localizer["All"]" data-cascade-with="PortalId" data-cascade-api-url="service/lookup?portalId=" value="@(Model?.ServiceId)"  data-smk-max="9999999999" data-smk-min="-9999999999">
    </select>
    
</div>
</div>
<div class="col-md-4 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="ModelStatusId">@modulesLocalizer["ModelStatus"] :</label>
    <select class="form-control form-select select2 select2-control select-dynamic"   id="ModelStatusId" name="ModelStatusId" data-api-url="modelstatus/lookup" data-default-val="" data-default-text="@localizer["All"]" value="@(Model?.ModelStatusId)"  data-smk-max="9999999999" data-smk-min="-9999999999">
    </select>
    
</div>
</div>
<div class="col-md-4 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="PageSize">@modulesLocalizer[""] :</label>
    <select class="form-control form-select select2 select2-control static-select"   id="PageSize" name="PageSize" value="@(Model?.PageSize)">
        <option value="20">20</option>
        <option value="50">50</option>
        <option value="100">100</option>
    </select>
    
</div>
</div>
<div class="col-md-12 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="Title">@modulesLocalizer["Model_TitleAr"] :</label>
    <input class="form-control"   type="text" data-type="text" data-smk-type="text" id="Title" name="Title" placeholder="" maxlength="100" value="@(Model?.Title)">
    
    <i class="accent"></i>
</div>
</div>

            </div>
        </form>
    </div>
</div>
<script>
    $('#grid-filter').find('select,input').change(function () {
        $('#PageNumber').val('1');
        $('#grid-filter').trigger('submit');

    });
</script>   