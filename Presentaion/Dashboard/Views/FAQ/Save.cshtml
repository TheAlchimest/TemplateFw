@using TemplateFw.Shared.Domain.Enums
@inject IOptions<WebSettings> webSettings
@model TemplateFw.Dtos.FaqDto

@{
    bool isUpdateMode = (Model.FaqId != 0);
    string isUpdateModeString = isUpdateMode.ToString().ToLower();
}
<form method="post" id="frmForm" name="frmForm" action="/faq/Save" data-is-update-mode="@(isUpdateModeString)">
    <div class="form-head mb-sm-5 mb-3 d-flex flex-wrap align-items-center ">
        <div class=" mr-auto">
            <h3 class="font-w600 mb-2">@localizer["Faq"]</h3>
            <p class="mb-0">@localizer["FaqManagement"]</p>
        </div>
    </div>
    <div class="card master-form">
        <div class="card-body">
            <input class="form-control"   type="" data-type="" data-smk-type=""  data-type="" data-smk-type="" id="FaqId" name="FaqId" placeholder="Enter " required maxlength="4" max="0"  smk-error-msg-required="Please Enter " data-smk-max="0"><div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="QuestionAr">Question ar :</label>
    <input class="form-control"   type="" data-type="" data-smk-type=""  data-type="" data-smk-type="" id="QuestionAr" name="QuestionAr" placeholder="Enter " maxlength="150" max="0"  data-smk-max="0">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="QuestionEn">Question en :</label>
    <input class="form-control"   type="" data-type="" data-smk-type=""  data-type="" data-smk-type="" id="QuestionEn" name="QuestionEn" placeholder="Enter " maxlength="150" max="0"  data-smk-max="0">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="AnswerAr">Answer ar <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <textarea rows="4"
              class="form-control"
                data-type="" data-smk-type=""  data-type="" data-smk-type="" id="AnswerAr" name="AnswerAr" placeholder="Enter " required maxlength="2000" max="0"  smk-error-msg-required="Please Enter " data-smk-max="0"></textarea>
              
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="AnswerEn">Answer en <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <textarea rows="4"
              class="form-control"
                data-type="" data-smk-type=""  data-type="" data-smk-type="" id="AnswerEn" name="AnswerEn" placeholder="Enter " required maxlength="2000" max="0"  smk-error-msg-required="Please Enter " data-smk-max="0"></textarea>
              
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="PortalId">Portal id <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <select class="form-control form-select select2 select2-control static-select"    data-type="" data-smk-type=""  data-type="" data-smk-type="" id="PortalId" name="PortalId" placeholder="Choose " required maxlength="4" max="0"  smk-error-msg-required="Choose " data-smk-max="0">
    </select>
    
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="ServiceId">Service id :</label>
    <select class="form-control form-select select2 select2-control static-select"    data-type="" data-smk-type=""  data-type="" data-smk-type="" id="ServiceId" name="ServiceId" placeholder="Choose " maxlength="4" max="0"  data-smk-max="0">
    </select>
    
</div>
</div>

        </div>
    </div>
    
    <div class="text-center">
        <button type="button" id="Send" class="btn btn-primary font-size-13 font-weight-bold"
                onclick="saveForm(this,event)"
                on-sccess-redirect-url="/#!/faq/"
                data-is-update-mode="@(isUpdateModeString)">
            <i class="far fa-lg fa-check"></i> ارسال
        </button>


        <a id="backActionBtn" href="/#!/faq" class="btn btn-danger mr-3">
            <i class="fas fa-times fa-lg fa-arrow-left"></i> العودة
        </a>

    </div>
</form>


<script>

    $("#frmForm :input").change(function () {
        $("#frmForm").data("changed", true);
    });

    function saveForm(obj, event) {

        if ($("frmForm").attr("data-is-update-mode") === 'false') {
            app.form.submit(obj, event)
        }
        else {
            swal.fire("لا يوجد تعديل", "لا يوجد بيانات تم تعديلها", "info");
            window.location = $("#backActionBtn").attr("href");
        }
    }
</script>