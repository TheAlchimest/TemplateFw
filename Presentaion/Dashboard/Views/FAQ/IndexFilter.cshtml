@inject IOptions<WebSettings> webSettings
@model TemplateFw.Dtos.FaqFilter
<div class="card master-form">
    <div class="card-body">
        <form id="grid-filter" class="grid-filter"
              action="/faq/IndexContent"
              data-container-id="containerBox"
              onsubmit="actionsController.search(this,event)">
            <input type="hidden" id="PageNumber" name="PageNumber" value="@Model.PageNumber" />
            <div class="row">
                <div class="col-md-4 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="PortalId">@localizer["Portal"] :</label>
    <select class="form-control form-select select2 select2-control select-dynamic"   id="PortalId" name="PortalId" data-api-url="lookup/portals" data-default-val="" data-default-text="@localizer["All"]" value="@(Model.PortalId)"  data-smk-max="0">
    </select>
    
</div>
</div>
<div class="col-md-4 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="ServiceId">@localizer["Service"] :</label>
    <select class="form-control form-select select2 select2-control select-dynamic"   id="ServiceId" name="ServiceId" data-api-url="lookup/services" data-default-val="" data-default-text="@localizer["All"]" data-cascade-with="PortalId" data-cascade-api-url="lookup/services?portalId=" value="@(Model.ServiceId)"  data-smk-max="0">
    </select>
    
</div>
</div>
<div class="col-md-4 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="PageSize">@localizer[""] :</label>
    <select class="form-control form-select select2 select2-control static-select"   id="PageSize" name="PageSize" value="@(Model.PageSize)">
        <option value="20">20</option>
        <option value="50">50</option>
        <option value="100">100</option>
    </select>
    
</div>
</div>
<div class="col-md-12 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="Question">@localizer["Faq_QuestionAr"] :</label>
    <input class="form-control"   type="text" data-type="text" data-smk-type="text" id="Question" name="Question" placeholder="" maxlength="150" value="@(Model.Question)"  data-smk-max="0">
    
    <i class="accent"></i>
</div>
</div>

            </div>
        </form>
    </div>
</div>
<script>
    $('#grid-filter').find('select,input').change(function () {
        $('#PageNumber').val('1');
        $('#grid-filter').trigger('submit');

    });
</script>   