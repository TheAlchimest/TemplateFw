@using TemplateFw.Shared.Domain.Enums
@inject IOptions<WebSettings> webSettings
@model TemplateFw.Dtos.ArticleDto

@{
    bool isUpdateMode = (ViewBag.IsUpdateMode != null) ? ViewBag.IsUpdateMode : false;

}
<form method="post" id="frmForm" name="frmForm" action="@(ViewBag.ActionUrl)">
    <div class="form-head mb-sm-5 mb-3 d-flex flex-wrap align-items-center ">
        <div class=" mr-auto">
            <h3 class="font-w600 mb-2">@modulesLocalizer["Article"]</h3>
            <p class="mb-0">@modulesLocalizer["ArticleManagement"]</p>
        </div>
    </div>
    <div class="card master-form">
        <div class="card-header">
            <h4 class="card-title fs-16 text-primary">
            </h4>
        </div>
        <div class="card-body">
            <div class="row">
                <input class="form-control"   type="hidden" data-type="hidden" data-smk-type="hidden" id="ArticleId" name="ArticleId" placeholder="" required maxlength="10" value="@(Model?.ArticleId)"  smk-error-msg-required="" data-smk-max="9999999999" data-smk-min="-9999999999"><div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="TitleAr">@modulesLocalizer["Article_TitleAr"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text" data-type="text" data-smk-type="text" id="TitleAr" name="TitleAr" placeholder="" required maxlength="100" value="@(Model?.TitleAr)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="TitleEn">@modulesLocalizer["Article_TitleEn"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text" data-type="text" data-smk-type="text" id="TitleEn" name="TitleEn" placeholder="" required maxlength="100" value="@(Model?.TitleEn)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="BriefAr">@modulesLocalizer["Article_BriefAr"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <textarea rows="4"
              class="form-control"
               id="BriefAr" name="BriefAr" placeholder="" required maxlength="250" value="@(Model?.BriefAr)"  smk-error-msg-required="">@(Model?.BriefAr)</textarea>
              
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="BriefEn">@modulesLocalizer["Article_BriefEn"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <textarea rows="4"
              class="form-control"
               id="BriefEn" name="BriefEn" placeholder="" required maxlength="250" value="@(Model?.BriefEn)"  smk-error-msg-required="">@(Model?.BriefEn)</textarea>
              
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="ContentAr">@modulesLocalizer["Article_ContentAr"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <textarea rows="4"
              class="form-control"
               id="ContentAr" name="ContentAr" placeholder="" required value="@(Model?.ContentAr)"  smk-error-msg-required="">@(Model?.ContentAr)</textarea>
              
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="ContentEn">@modulesLocalizer["Article_ContentEn"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <textarea rows="4"
              class="form-control"
               id="ContentEn" name="ContentEn" placeholder="" required value="@(Model?.ContentEn)"  smk-error-msg-required="">@(Model?.ContentEn)</textarea>
              
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="AuthorId">@modulesLocalizer["Author"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
@await Html.PartialAsync("/Views/RunTimeControls/Select.cshtml",
               new TemplateFw.Shared.Dto.RunTimeSelectControl(){
                  Id="AuthorId",
                   AdditionalAttributes = "",
                   ApiUrl = webSettings.Value.LookupApiUrl+ "lookup/authors", 
                   Value = Model?.AuthorId.ToString(),
                   AddDefaultOption=(!isUpdateMode)
               });
    
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="CategoryId">@modulesLocalizer["Category"] :</label>
@await Html.PartialAsync("/Views/RunTimeControls/Select.cshtml",
               new TemplateFw.Shared.Dto.RunTimeSelectControl(){
                  Id="CategoryId",
                   AdditionalAttributes = "",
                   ApiUrl = webSettings.Value.LookupApiUrl+ "lookup/categories", 
                   Value = Model?.CategoryId.ToString(),
                   AddDefaultOption=(!isUpdateMode)
               });
    
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="IsPublished">@modulesLocalizer["Article_IsPublished"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   data-type="yesno" data-smk-type="yesno" id="IsPublished" name="IsPublished" placeholder="" required maxlength="1" value="@(Model?.IsPublished)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="PublicationDate">@modulesLocalizer["Article_PublicationDate"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text" data-type="date" data-smk-type="date" id="PublicationDate" name="PublicationDate" placeholder="" required maxlength="10" readonly value="@(Model?.PublicationDate)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="PublishedAt">@modulesLocalizer["Article_PublishedAt"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text" data-type="datetime" data-smk-type="datetime" id="PublishedAt" name="PublishedAt" placeholder="" required maxlength="19" readonly value="@(Model?.PublishedAt)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>

            </div>
        </div>
    </div>
    
    <div class="text-center">
        <button type="button" id="Send" class="btn btn-primary font-size-13 font-weight-bold"
                onclick="actionsController.submit('frmForm',this,event)"
                on-sccess-redirect-url="/#!/article/">
            <i class="far fa-lg fa-check"></i> ارسال
        </button>


        <a id="backActionBtn" href="/#!/article" class="btn btn-danger mr-3">
            <i class="fas fa-times fa-lg fa-arrow-left"></i> العودة
        </a>

    </div>
</form>

<script>
    actionsController.prepareForm("frmForm");
</script>