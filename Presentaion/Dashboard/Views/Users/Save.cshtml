@using TemplateFw.Shared.Domain.Enums
@inject IOptions<WebSettings> webSettings
@model TemplateFw.Dtos.UsersDto

@{
    bool isUpdateMode = (ViewBag.IsUpdateMode != null) ? ViewBag.IsUpdateMode : false;

}
<form method="post" id="frmForm" name="frmForm" action="@(ViewBag.ActionUrl)">
    <div class="form-head mb-sm-5 mb-3 d-flex flex-wrap align-items-center ">
        <div class=" mr-auto">
            <h3 class="font-w600 mb-2">@modulesLocalizer["Users"]</h3>
            <p class="mb-0">@modulesLocalizer["UsersManagement"]</p>
        </div>
    </div>
    <div class="card master-form">
        <div class="card-header">
            <h4 class="card-title fs-16 text-primary">
            </h4>
        </div>
        <div class="card-body">
            <div class="row">
                <input class="form-control"   type="hidden" data-type="hidden" data-smk-type="hidden" id="UserId" name="UserId" placeholder="" required maxlength="4" value="@(Model?.UserId)"  smk-error-msg-required="" data-smk-max="9999999999" data-smk-min="-9999999999"><div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="FirstName">@modulesLocalizer["Users_FirstName"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text" data-type="text" data-smk-type="text" id="FirstName" name="FirstName" placeholder="" required maxlength="50" value="@(Model?.FirstName)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="LastName">@modulesLocalizer["Users_LastName"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text" data-type="text" data-smk-type="text" id="LastName" name="LastName" placeholder="" required maxlength="50" value="@(Model?.LastName)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="Email">@modulesLocalizer["Users_Email"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text" data-type="text" data-smk-type="text" id="Email" name="Email" placeholder="" required maxlength="255" value="@(Model?.Email)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="Username">@modulesLocalizer["Users_Username"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text" data-type="text" data-smk-type="text" id="Username" name="Username" placeholder="" required maxlength="20" value="@(Model?.Username)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="PasswordHash">@modulesLocalizer["Users_PasswordHash"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <textarea rows="4"
              class="form-control"
               id="PasswordHash" name="PasswordHash" placeholder="" required value="@(Model?.PasswordHash)"  smk-error-msg-required="">@(Model?.PasswordHash)</textarea>
              
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="ProfileInfo">@modulesLocalizer["Users_ProfileInfo"] :</label>
    <textarea rows="4"
              class="form-control"
               id="ProfileInfo" name="ProfileInfo" placeholder="" value="@(Model?.ProfileInfo)">@(Model?.ProfileInfo)</textarea>
              
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="LastLoginAt">@modulesLocalizer["Users_LastLoginAt"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text" data-type="datetime" data-smk-type="datetime" id="LastLoginAt" name="LastLoginAt" placeholder="" required maxlength="8" readonly value="@(Model?.LastLoginAt)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>

            </div>
        </div>
    </div>
    
    <div class="text-center">
        <button type="button" id="Send" class="btn btn-primary font-size-13 font-weight-bold"
                onclick="actionsController.submit('frmForm',this,event)"
                on-sccess-redirect-url="/#!/users/">
            <i class="far fa-lg fa-check"></i> ارسال
        </button>


        <a id="backActionBtn" href="/#!/users" class="btn btn-danger mr-3">
            <i class="fas fa-times fa-lg fa-arrow-left"></i> العودة
        </a>

    </div>
</form>

<script>
    actionsController.prepareForm("frmForm");
</script>