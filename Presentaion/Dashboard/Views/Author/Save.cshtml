@using TemplateFw.Shared.Domain.Enums
@inject IOptions<WebSettings> webSettings
@model TemplateFw.Dtos.AuthorDto

@{
    bool isUpdateMode = (ViewBag.IsUpdateMode != null) ? ViewBag.IsUpdateMode : false;

}
<form method="post" id="frmForm" name="frmForm" action="@(ViewBag.ActionUrl)">
    <div class="form-head mb-sm-5 mb-3 d-flex flex-wrap align-items-center ">
        <div class=" mr-auto">
            <h3 class="font-w600 mb-2">@modulesLocalizer["Authors"]</h3>
            <p class="mb-0">@modulesLocalizer["Author_Management"]</p>
        </div>
    </div>
    <div class="card master-form">
        <div class="card-header">
            <h4 class="card-title fs-16 text-primary">
            </h4>
        </div>
        <div class="card-body">
            <div class="row">
                <input class="form-control"   type="hidden" data-type="hidden" data-smk-type="hidden" id="AuthorId" name="AuthorId" placeholder="" required maxlength="10" value="@(Model?.AuthorId)"  smk-error-msg-required="" data-smk-max="9999999999" data-smk-min="-9999999999"><div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="FirstName">@modulesLocalizer["Author_FirstName"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text" data-type="text" data-smk-type="text" id="FirstName" name="FirstName" placeholder="" required maxlength="50" value="@(Model?.FirstName)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="LastName">@modulesLocalizer["Author_LastName"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text" data-type="text" data-smk-type="text" id="LastName" name="LastName" placeholder="" required maxlength="50" value="@(Model?.LastName)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="Email">@modulesLocalizer["Author_Email"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <div class="input-group">
        <span class="input-group-text input-group-text-light" >
        </span>
        <input class="form-control"   type="email" data-type="email" data-smk-type="email" id="Email" name="Email" placeholder="" required maxlength="100" value="@(Model?.Email)"  smk-error-msg-required="">
        <i class="accent"></i>
    </div>
    
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="Phone">@modulesLocalizer["Author_Phone"] :</label>
    <input class="form-control"   type="tel" data-type="tel" data-smk-type="tel" id="Phone" name="Phone" placeholder="" maxlength="20" value="@(Model?.Phone)">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="Mobile">@modulesLocalizer["Author_Mobile"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="tel" data-type="tel" data-smk-type="tel" id="Mobile" name="Mobile" placeholder="" required maxlength="12" value="@(Model?.Mobile)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="Biography">@modulesLocalizer["Author_Biography"] :</label>
    <textarea rows="4"
              class="form-control"
               id="Biography" name="Biography" placeholder="" maxlength="500" value="@(Model?.Biography)">@(Model?.Biography)</textarea>
              
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="ProfileUrl">@modulesLocalizer["Author_ProfileUrl"] :</label>
    <input class="form-control"   type="text" data-type="text" data-smk-type="text" id="ProfileUrl" name="ProfileUrl" placeholder="" maxlength="150" value="@(Model?.ProfileUrl)">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="IDNumber">@modulesLocalizer["Author_IDNumber"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="number" data-type="number" data-smk-type="number" id="IDNumber" name="IDNumber" placeholder="" required maxlength="10" value="@(Model?.IDNumber)"  smk-error-msg-required="" data-smk-max="2999999999" data-smk-min="-1E+19" max="2999999999" min="-1E+19">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group select2-lg">
    <label class="form-label-small px-3" for="CountryId">@modulesLocalizer["Country"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
@await Html.PartialAsync("/Views/RunTimeControls/Select.cshtml",
               new TemplateFw.Shared.Dto.RunTimeSelectControl(){
                  Id="CountryId",
                   AdditionalAttributes = "",
                   ApiUrl = webSettings.Value.ApiLookupApiUrl+ "country/lookup", 
                   Value = Model?.CountryId.ToString(),
                   AddDefaultOption=(!isUpdateMode)
               });
    
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="PostalCode">@modulesLocalizer["Author_PostalCode"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="number" data-type="number" data-smk-type="number" id="PostalCode" name="PostalCode" placeholder="" required maxlength="5" value="@(Model?.PostalCode)"  smk-error-msg-required="" data-smk-max="99999" data-smk-min="-9999999999" max="99999" min="-9999999999">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="Address">@modulesLocalizer["Author_Address"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text" data-type="text" data-smk-type="text" id="Address" name="Address" placeholder="" required maxlength="150" value="@(Model?.Address)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="Website">@modulesLocalizer["Author_Website"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="url" data-type="url" data-smk-type="url" id="Website" name="Website" placeholder="" required maxlength="150" value="@(Model?.Website)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="ProfileLink">@modulesLocalizer["Author_ProfileLink"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="url" data-type="url" data-smk-type="url" id="ProfileLink" name="ProfileLink" placeholder="" required maxlength="150" value="@(Model?.ProfileLink)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="YoutubeChannelURL">@modulesLocalizer["Author_YoutubeChannelURL"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="url" data-type="url" data-smk-type="url" id="YoutubeChannelURL" name="YoutubeChannelURL" placeholder="" required maxlength="150" value="@(Model?.YoutubeChannelURL)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="BirthDate">@modulesLocalizer["Author_BirthDate"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text" data-type="date" data-smk-type="date" id="BirthDate" name="BirthDate" placeholder="" required maxlength="10" readonly value="@((Model?.BirthDate>DateTime.MinValue)? Model?.BirthDate.ToString("yyyy/MM/dd"):"")"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>
<div class="col-md-6 eng-form-element">
<div class="form-group">
    <label class="form-label-small px-3" for="BirthHijriDate">@modulesLocalizer["Author_BirthHijriDate"] <small><i class="fas fa-asterisk text-danger fa-xs"></i></small>:</label>
    <input class="form-control"   type="text"  data-hijri="true" data-type="datehijri" data-smk-type="datehijri" id="BirthHijriDate" name="BirthHijriDate" placeholder="" required maxlength="10" readonly value="@(Model?.BirthHijriDate)"  smk-error-msg-required="">
    
    <i class="accent"></i>
</div>
</div>

            </div>
        </div>
    </div>
    
    <div class="text-center">
        <button type="button" id="Send" class="btn btn-primary font-size-13 font-weight-bold"
                onclick="actionsController.submit('frmForm',this,event)"
                on-sccess-redirect-url="/#!/author/">
            <i class="far fa-lg fa-check"></i> ارسال
        </button>


        <a id="backActionBtn" href="/#!/author" class="btn btn-danger mr-3">
            <i class="fas fa-times fa-lg fa-arrow-left"></i> العودة
        </a>

    </div>
</form>

<script>
    actionsController.prepareForm("frmForm");
</script>